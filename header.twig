                </div>

                <div class="tabs">
                    <button type="button"><img src="image/user.png"></button>
                    <button type="button"><img src="image/favorites.png"></button>
                    <button type="button"><img src="image/basket.png"></button>
                </div>
            </div>


            <div class="navbar-bottom">

                <div class="dropdown">
                    <p>{{'text_catalog'}}</p>
                    <img src="image/dropdawn.png">
                </div>

                <div class="tabs-bottom">
                    <ul>
                        <li><a href="#">{{'text_shipping_payment'}}</a></li>
                        <li><a href="#">{{'text_company'}}</a></li>
                        <li><a href="#">{{'text_contacts'}}</a></li>
                        <li><a href="#">{{'text_stock'}}</a></li>
                        <li><a href="#">{{'text_attractions'}}</a></li>
                    </ul>
                </div>
                <div class="number">
                   <b>{{'text_number'}}</b>
                </div>
            </div>

            
            <div class="mobile">
                <div class="mobile_top">
                    <div>
                        <a href=""><img class="logo" src="image/logo.png"></a>
                    </div>
                    <div class="number">
                        <b>{{'text_number'}}</b>
                     </div>
                </div>
                <div class="mobile_bottom">
                    <div class="dropdown">
                        <p>Каталог</p>
                        <img src="image/dropdawn.png">
                    </div>
                    <div class="tabs">
                        <button type="button"><img src="image/user.png"></button>
                        <button type="button"><img src="image/favorites.png"></button>
                        <button type="button"><img src="image/basket.png"></button>
                    </div>
                </div>
